<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fish_photo"
        android:layout_width="104dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/fish_info"
        android:contentDescription="TODO"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/fish_photo" />

    <TextView
        android:id="@+id/fish_info"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_above="@+id/cal_photo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cal_photo"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="hello"
        android:textAppearance="?android:textAppearanceLarge"
        android:visibility="visible"
        tools:text="fish" />

    <ImageView
        android:id="@+id/cal_photo"
        android:layout_width="108dp"
        android:layout_height="96dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/fish_photo"
        android:layout_toStartOf="@+id/cal_info"
        android:contentDescription="TODO"
        android:paddingBottom="20dp"
        android:src="@mipmap/fish_photo" />

    <TextView
        android:id="@+id/cal_info"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_above="@+id/size_photo"
        android:layout_below="@+id/fish_info"
        android:layout_toEndOf="@+id/size_photo"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="hello"
        android:textAppearance="?android:textAppearanceLarge"
        android:visibility="visible"
        tools:text="calendar" />

    <ImageView
        android:id="@+id/size_photo"
        android:layout_width="110dp"
        android:layout_height="94dp"
        android:contentDescription="TODO"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/cal_photo"
        android:src="@mipmap/fish_photo" />

    <TextView
        android:id="@+id/size_info"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="142dp"
        android:layout_above="@+id/season_photo"
        android:layout_below="@id/cal_photo"
        android:layout_toRightOf="@id/size_photo"
        android:padding="10dp"
        android:text="hello"
        android:textAppearance="?android:textAppearanceLarge"
        android:visibility="visible"
        tools:text="size" />

    <ImageView
        android:id="@+id/season_photo"
        android:layout_width="114dp"
        android:layout_height="100dp"
        android:contentDescription="TODO"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/size_photo"
        android:src="@mipmap/fish_photo" />

    <TextView
        android:id="@+id/season_info"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_alignBottom="@+id/season_photo"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:layout_below="@id/size_photo"
        android:layout_toRightOf="@id/season_photo"
        android:text="season"
        android:textAppearance="?android:textAppearanceLarge" />


</RelativeLayout>